@model PawsAndClaws.Models.RegisterViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Join the Family";
}

<div class="min-h-[calc(100vh-5rem)] bg-[#FFFAF7] flex flex-col items-center justify-center py-12 px-4 font-sans relative overflow-hidden">

    <img src="~/images/Register.png" 
         alt="Registration Illustration" 
         class="absolute bottom-0 left-0 w-64 md:w-80 lg:w-[400px] h-auto pointer-events-none select-none z-0 hidden md:block" />

    <img src="~/images/Paws.png" 
         alt="Decorative Paw" 
         class="absolute right-16 top-1/2 -translate-y-1/2 w-48 lg:w-72 h-auto pointer-events-none select-none z-0" />

    <div class="z-10 w-full max-w-xl">
        <div class="text-center mb-10">
            <div class="inline-flex items-center gap-2 border border-[#F87004] bg-[#F87004]/10 px-4 py-2 rounded-full mb-6">
                <i data-lucide="paw-print" class="w-4 h-4 text-[#F87004]"></i>
                <span class="text-[#F87004] text-xs font-bold tracking-widest uppercase">Paws & Claws For a Cause</span>
            </div>
            <h1 class="text-5xl font-black text-[#2D2D2D] font-lilita mb-2" style="font-family: 'Lilita One', cursive;">
                Your friend <span class="text-[#56C2B1]">awaits</span>
            </h1>
            <p class="text-gray-500 font-medium mb-8">Find your fur-ever bestfriend.</p>
            
            <partial name="_RegistrationProgress" model="1" />
        </div>

        <div class="bg-white rounded-[40px] shadow-sm p-8 md:p-12 w-full">
            
            <form asp-action="Register" method="post" class="w-full space-y-5">
                <div class="flex flex-col md:flex-row gap-4">
                    <div class="relative flex-1">
                        <i data-lucide="user" class="absolute left-4 top-3.5 w-5 h-5 text-orange-300"></i>
                        <input asp-for="FirstName" placeholder="First Name" class="w-full pl-12 pr-4 py-3 bg-white border border-gray-100 rounded-2xl text-sm focus:outline-none focus:ring-2 focus:ring-teal-100 transition-all" />
                    </div>
                    <div class="relative flex-1">
                        <i data-lucide="user" class="absolute left-4 top-3.5 w-5 h-5 text-orange-300"></i>
                        <input asp-for="LastName" placeholder="Last Name" class="w-full pl-12 pr-4 py-3 bg-white border border-gray-100 rounded-2xl text-sm focus:outline-none focus:ring-2 focus:ring-teal-100 transition-all" />
                    </div>
                </div>

                <div class="relative">
                    <i data-lucide="mail" class="absolute left-4 top-3.5 w-5 h-5 text-orange-300"></i>
                    <input asp-for="Email" type="email" placeholder="Email Address" class="w-full pl-12 pr-4 py-3 bg-white border border-gray-100 rounded-2xl text-sm focus:outline-none focus:ring-2 focus:ring-teal-100 transition-all" />
                </div>

                <div class="relative">
                    <i data-lucide="lock" class="absolute left-4 top-3.5 w-5 h-5 text-orange-300"></i>
                    <input asp-for="Password" type="password" placeholder="Password" class="w-full pl-12 pr-4 py-3 bg-white border border-gray-100 rounded-2xl text-sm focus:outline-none focus:ring-2 focus:ring-teal-100 transition-all" />
                    <i data-lucide="eye" class="absolute right-4 top-3.5 w-5 h-5 text-gray-300 cursor-pointer"></i>
                </div>

                <div class="relative">
                    <i data-lucide="lock" class="absolute left-4 top-3.5 w-5 h-5 text-orange-300"></i>
                    <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" class="w-full pl-12 pr-4 py-3 bg-white border border-gray-100 rounded-2xl text-sm focus:outline-none focus:ring-2 focus:ring-teal-100 transition-all" />
                </div>

                <button type="submit" class="w-full bg-gradient-to-r from-[#178F85] via-[#66BBB4] to-[#90EFE7] text-white font-bold py-4 rounded-full shadow-lg shadow-teal-100 flex items-center justify-center gap-2 hover:opacity-90 transition-all transform hover:scale-[1.01] active:scale-[0.99] mt-8">
                    Join the Family
                    <i data-lucide="arrow-right" class="w-5 h-5"></i>
                </button>

                <p class="text-center text-sm text-gray-400 mt-6">
                    Already have an account? <a href="/login" class="text-orange-500 hover:underline">Login here</a>
                </p>
            </form>
        </div>
    </div>
</div>