@model PawsAndClaws.Models.HomeLivingViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Home & Living";
}

<div class="min-h-[calc(100vh-5rem)] bg-[#FFFAF7] flex flex-col items-center justify-center py-12 px-4 font-sans relative overflow-hidden">

    <img src="~/images/Register.png" 
         alt="Registration Illustration" 
         class="absolute bottom-0 left-0 w-64 md:w-80 lg:w-[400px] h-auto pointer-events-none select-none z-0 hidden md:block" />

    <img src="~/images/Paws.png" 
         alt="Decorative Paw" 
         class="absolute right-16 top-1/2 -translate-y-1/2 w-48 lg:w-72 h-auto pointer-events-none select-none z-0" />

    <div class="z-10 w-full max-w-xl">
        <div class="text-center mb-10">
            <div class="inline-flex items-center gap-2 border border-[#F87004] bg-[#F87004]/10 px-4 py-2 rounded-full mb-6">
                <i data-lucide="paw-print" class="w-4 h-4 text-[#F87004]"></i>
                <span class="text-[#F87004] text-xs font-bold tracking-widest uppercase">Paws & Claws For a Cause</span>
            </div>
            <h1 class="text-5xl font-black text-[#2D2D2D] font-lilita mb-2" style="font-family: 'Lilita One', cursive;">
                Home & <span class="text-[#56C2B1]">Living</span>
            </h1>
            <p class="text-gray-500 font-medium px-8 text-sm mb-8">Where will your new friend be staying?</p>

            <partial name="_RegistrationProgress" model="4" />
        </div>

        <div class="bg-white rounded-[40px] shadow-sm p-8 md:p-12 w-full border border-gray-50">
            <form asp-action="CompleteRegistration" method="post" class="w-full space-y-8">
                
                <div class="space-y-2">
                    <label class="text-[10px] font-black text-gray-400 tracking-widest uppercase ml-4">Full Home Address</label>
                    <div class="relative">
                        <i data-lucide="map-pin" class="absolute left-6 top-1/2 -translate-y-1/2 w-5 h-5 text-[#F87004]"></i>
                        <input asp-for="Address" placeholder="18 Masipag Street, Tahal Avenue" 
                               class="w-full pl-14 pr-6 py-4 bg-white border border-gray-100 rounded-2xl text-sm focus:outline-none focus:ring-2 focus:ring-[#56C2B1]/20 transition-all" />
                    </div>
                </div>

                <div class="space-y-4">
                    <label class="text-[10px] font-black text-gray-400 tracking-widest uppercase ml-4">Living Situation</label>
                    <div class="grid grid-cols-3 gap-3">
                        @foreach (var option in new[] { ("House", "home"), ("Apartment", "building-2"), ("Barn", "warehouse") })
                        {
                            <label class="relative flex flex-col items-center justify-center p-4 border-2 rounded-2xl cursor-pointer transition-all duration-200
                                          border-gray-50 bg-white hover:border-gray-100
                                          has-[:checked]:border-[#F87004] has-[:checked]:bg-[#FFF4ED]">
                                <input type="radio" name="LivingSituation" value="@option.Item1" class="sr-only" @(option.Item1 == "House" ? "checked" : "") />
                                <i data-lucide="@option.Item2" class="w-6 h-6 mb-2 text-gray-300 [label:has(:checked)_&]:text-[#F87004]"></i>
                                <span class="text-[10px] font-black tracking-widest uppercase text-gray-300 [label:has(:checked)_&]:text-[#F87004]">@option.Item1</span>
                            </label>
                        }
                    </div>
                </div>

                <div class="flex gap-4 mt-4">
                    <a asp-action="@ViewBag.BackAction" class="flex-1 text-center py-4 rounded-full border-2 border-gray-100 text-gray-400 font-bold hover:bg-gray-50 transition-all">
                        Back
                    </a>
                    <button type="submit" class="flex-[2] bg-gradient-to-r from-[#178F85] via-[#66BBB4] to-[#90EFE7] text-white font-bold py-4 rounded-full shadow-lg flex items-center justify-center gap-2 hover:opacity-95 transition-all transform hover:scale-[1.01] active:scale-[0.99]">
                        Complete Registration
                        <i data-lucide="check-circle" class="w-5 h-5"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>