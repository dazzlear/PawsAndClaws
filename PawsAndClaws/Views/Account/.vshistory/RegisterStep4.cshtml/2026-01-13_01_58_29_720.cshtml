@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('step4Form');
            const openBtn = document.getElementById('openConfirm');

            if (!form || !openBtn || !window.ModalManager) return;

            // put the first name in ViewBag.FirstName from your controller (see note below)
            const firstName = '@(ViewBag.FirstName ?? "there")';

            function isFormValid() {
                // jQuery unobtrusive validation (recommended)
                if (window.jQuery && window.jQuery.validator && window.jQuery(form).data('validator')) {
                    return window.jQuery(form).valid();
                }

                // fallback HTML5 validation
                if (!form.checkValidity()) {
                    form.reportValidity();
                    return false;
                }

                return true;
            }

            openBtn.addEventListener('click', function () {
                if (!isFormValid()) return;

                ModalManager.confirm(
                    "Ready to join?",
                    `Welcome, ${firstName}! You're one step away from finding your perfect pet companion. Do you want to create your account now?`,
                    "CREATE ACCOUNT",
                    "EDIT",
                    () => {
                        // ✅ submit normally (keeps antiforgery + model binding)
                        if (form.requestSubmit) form.requestSubmit();
                        else HTMLFormElement.prototype.submit.call(form);
                    },
                    () => { /* edit = do nothing */ }
                );
            });

            // Prevent Enter key from submitting without confirmation
            form.addEventListener('submit', function (e) {
                e.preventDefault();
                openBtn.click();
            });
        });
    </script>
}