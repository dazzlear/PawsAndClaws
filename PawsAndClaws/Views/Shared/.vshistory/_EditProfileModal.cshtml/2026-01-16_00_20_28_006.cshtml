@model UserProfileViewModel

<div id="editProfileModal" class="fixed inset-0 z-[100] hidden flex items-center justify-center bg-black/40 backdrop-blur-sm px-4">
    <div class="bg-white rounded-[40px] w-full max-w-lg shadow-2xl relative flex flex-col max-h-[90vh] overflow-hidden animate-in fade-in zoom-in duration-300">

        <div class="p-8 pb-4 flex justify-between items-center shrink-0 border-b border-gray-50/50">
            <h2 class="text-3xl font-black text-[#2D2D2D]" style="font-family: 'Lilita One', cursive;">
                Edit <span class="text-[#56C2B1]">Profile</span>
            </h2>
            <button type="button" id="closeEditModal" class="p-2 hover:bg-gray-100 rounded-full transition-colors text-gray-400">
                <i data-lucide="x" class="w-6 h-6"></i>
            </button>
        </div>

        <form id="editProfileForm"
              asp-controller="Account"
              asp-action="UpdateProfile"
              method="post"
              enctype="multipart/form-data"
              class="flex-1 overflow-y-auto p-8 pt-6 space-y-6 custom-scrollbar pr-6 mr-2">

            @Html.AntiForgeryToken()

            @* keep existing profile picture if user doesn't upload *@
            <input type="hidden" asp-for="ProfilePictureUrl" />

            @* 1) Profile Picture *@
            <div class="space-y-2">
                <label class="text-[10px] font-black text-gray-400 tracking-widest uppercase">Profile Picture</label>

                <div class="flex items-center gap-4">
                    <div class="w-16 h-16 rounded-2xl overflow-hidden bg-gray-50 border border-gray-100 shrink-0">
                        <img id="profilePreview"
                             src="@Url.Content(Model.ProfilePictureUrl ?? "/images/profile-placeholder.jpg")"
                             class="w-full h-full object-cover"
                             alt="Profile Preview" />
                    </div>

                    <div class="flex-1">
                        <div onclick="document.getElementById('profilePicInput').click()"
                             class="border-2 border-dashed border-gray-100 rounded-3xl p-5 flex flex-col items-center justify-center gap-2 hover:border-[#56C2B1]/50 hover:bg-[#56C2B1]/5 transition-all cursor-pointer group">
                            <div class="bg-gray-50 p-3 rounded-full group-hover:bg-white transition-colors">
                                <i data-lucide="upload" class="w-5 h-5 text-gray-400 group-hover:text-[#56C2B1]"></i>
                            </div>
                            <div class="text-center">
                                <p class="text-sm font-bold text-gray-700">Click to upload image</p>
                                <p class="text-[9px] text-gray-400 uppercase font-black">PNG, JPG up to 4MB</p>
                            </div>
                            <input id="profilePicInput" type="file" name="ProfilePicture" class="hidden" accept="image/*" />
                        </div>
                        <p id="fileName" class="mt-2 text-[10px] font-bold text-gray-400"></p>
                    </div>
                </div>
            </div>

            @* 2) Names *@
            <div class="flex gap-4">
                <div class="flex-1 space-y-2">
                    <label class="text-[10px] font-black text-gray-400 tracking-widest uppercase">First Name</label>
                    <input asp-for="FirstName"
                           class="w-full px-5 py-3.5 bg-gray-50 border border-gray-100 rounded-2xl focus:border-[#56C2B1] outline-none transition-all text-sm font-medium" />
                </div>

                <div class="flex-1 space-y-2">
                    <label class="text-[10px] font-black text-gray-400 tracking-widest uppercase">Last Name</label>
                    <input asp-for="LastName"
                           class="w-full px-5 py-3.5 bg-gray-50 border border-gray-100 rounded-2xl focus:border-[#56C2B1] outline-none transition-all text-sm font-medium" />
                </div>
            </div>

            @* 3) Email *@
            <div class="space-y-2">
                <label class="text-[10px] font-black text-gray-400 tracking-widest uppercase">Email Address</label>
                <input asp-for="Email" type="email"
                       class="w-full px-5 py-3.5 bg-gray-50 border border-gray-100 rounded-2xl focus:border-[#56C2B1] outline-none text-sm font-medium" />
            </div>

            @* 4) Address *@
            <div class="space-y-2">
                <label class="text-[10px] font-black text-gray-400 tracking-widest uppercase">Full Address</label>
                <input asp-for="FullAddress"
                       class="w-full px-5 py-3.5 bg-gray-50 border border-gray-100 rounded-2xl focus:border-[#56C2B1] outline-none text-sm font-medium" />
            </div>

            @* 5) Living Situation *@
            <div class="space-y-2">
                <label class="text-[10px] font-black text-gray-400 tracking-widest uppercase">Living Situation</label>
                <select asp-for="LivingSituation"
                        class="w-full px-5 py-3.5 bg-gray-50 border border-gray-100 rounded-2xl focus:border-[#56C2B1] outline-none text-sm font-medium appearance-none cursor-pointer">
                    <option value="">Select Situation</option>
                    <option value="House">House</option>
                    <option value="Apartment">Apartment</option>
                    <option value="Barn">Barn</option>
                </select>
            </div>
        </form>

        <hr class="my-8" />

        <h3 class="text-[10px] font-black text-gray-400 tracking-widest uppercase mb-3">
            My Current Pets (@Model.OwnedPets.Count)
        </h3>

        <div class="p-8 pt-4 border-t border-gray-50 shrink-0">
            <button type="submit" form="editProfileForm"
                    class="w-full py-4 rounded-full bg-gradient-to-r from-[#F87004] to-[#FBBF24] text-white text-[12px] font-black uppercase tracking-widest shadow-lg shadow-orange-100 flex items-center justify-center gap-2 hover:scale-[1.02] active:scale-[0.98] transition-all">
                Save Changes
                <i data-lucide="check-circle" class="w-4 h-4"></i>
            </button>
        </div>
    </div>
</div>

<style>
    .custom-scrollbar::-webkit-scrollbar {
        width: 5px;
    }

    .custom-scrollbar::-webkit-scrollbar-track {
        background: transparent;
    }

    .custom-scrollbar::-webkit-scrollbar-thumb {
        background: #E5E7EB;
        border-radius: 10px;
    }

        .custom-scrollbar::-webkit-scrollbar-thumb:hover {
            background: #56C2B1;
        }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const editProfileForm = document.getElementById('editProfileForm');
        const fileInput = document.getElementById('profilePicInput');
        const preview = document.getElementById('profilePreview');
        const fileName = document.getElementById('fileName');

        // live preview + filename
        fileInput?.addEventListener('change', () => {
            const f = fileInput.files && fileInput.files[0];
            if (!f) return;

            fileName.textContent = f.name;

            const url = URL.createObjectURL(f);
            preview.src = url;
        });

        if (editProfileForm) {
            editProfileForm.addEventListener('submit', (e) => {
                e.preventDefault();

                const firstName = editProfileForm.querySelector('[name="FirstName"]')?.value?.trim() ?? "";
                const lastName  = editProfileForm.querySelector('[name="LastName"]')?.value?.trim() ?? "";
                const email     = editProfileForm.querySelector('[name="Email"]')?.value?.trim() ?? "";

                if (!firstName || !lastName || !email) {
                    ModalManager.show(
                        "Required fields",
                        "Please fill in First Name, Last Name, and Email before saving.",
                        "GOT IT"
                    );
                    return;
                }

                ModalManager.confirm(
                    "Save changes?",
                    "Your profile information will be updated. Make sure everything is correct.",
                    "SAVE",
                    "CANCEL",
                    () => editProfileForm.submit(), // .submit() bypasses this handler (good)
                    () => {}
                );
            });
        }
    });
</script>
