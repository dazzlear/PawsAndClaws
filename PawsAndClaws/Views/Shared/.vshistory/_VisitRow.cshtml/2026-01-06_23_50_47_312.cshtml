@model PawsAndClaws.Models.ViewModels.ScheduledVisitViewModel

<tr class="hover:bg-gray-50/50 transition-colors">
    <td class="px-12 py-10 text-lg font-black text-[#2D2D2D]">@Model.PetName</td>
    <td class="px-8 py-10 text-sm font-medium text-gray-400">@Model.Location</td>
    <td class="px-8 py-10">
        <div class="flex items-center gap-3">
            <span class="text-[#56C2B1] font-bold text-sm">@Model.Schedule.ToString("MMM dd, yyyy")</span>
            <span class="text-gray-300 text-sm">â€¢</span>
            <span class="text-gray-400 font-bold text-sm">@Model.Schedule.ToString("h:mm tt")</span>
        </div>
    </td>
    <td class="px-8 py-10">
        <div class="flex gap-4 justify-center">
            <button class="bg-gray-200 text-gray-500 px-8 py-2.5 rounded-full text-[10px] font-black uppercase tracking-widest hover:bg-gray-300 transition-colors">Reschedule</button>
            <button class="border-2 border-red-500 text-red-500 px-8 py-2.5 rounded-full text-[10px] font-black uppercase tracking-widest hover:bg-red-500 hover:text-white transition-all">Cancel</button>
        </div>
    </td>
</tr>
