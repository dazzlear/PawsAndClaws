<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PawsAndClaws</title>
    
    @* Google Fonts - Standardized for design consistency *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lilita+One&family=Poppins:wght@300;400;600;700;900&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-[#FFFAF7] font-['Poppins']">
    <header class="bg-white border-b border-gray-100 sticky top-0 z-50">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-20">
                
                @* 1. LOGO SECTION *@
                <div class="flex-shrink-0 flex items-center">
                    <a asp-controller="Home" asp-action="Index" class="flex items-center gap-2 group transition-all no-underline">
                        <div class="bg-[#FF8533] p-2 rounded-lg shadow-sm">
                            <i data-lucide="paw-print" class="w-6 h-6 text-white"></i>
                        </div>
                        <span class="text-2xl font-black tracking-tighter text-gray-900 group-hover:text-[#FF8533] transition-colors" style="font-family: 'Lilita One', cursive;">
                            PAWS & CLAWS
                        </span>
                    </a>
                </div>

                @* 2. CONDITIONAL NAVIGATION SECTION *@
                <div class="flex items-center gap-6">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        @* LOGGED IN: Pill-shaped navigation *@
                        <div class="flex items-center bg-gray-50 border border-gray-100 rounded-full p-1 gap-1">
                            
                            @* Home (Active State matches image_f39da9.png) *@
                            <a asp-controller="Home" asp-action="Index" 
                               class="flex items-center gap-2 px-6 py-2 bg-white rounded-full shadow-sm border border-gray-100 transition-all no-underline">
                                <i data-lucide="home" class="w-4 h-4 text-[#F87004]"></i>
                                <span class="text-[10px] font-black text-[#F87004] uppercase tracking-widest">Home</span>
                            </a>

                            @* Applications *@
                            <a asp-controller="Adoption" asp-action="MyApplications" 
                               class="flex items-center gap-2 px-6 py-2 rounded-full hover:bg-white/50 transition-all group no-underline">
                                <i data-lucide="clipboard-list" class="w-4 h-4 text-gray-300 group-hover:text-[#F87004]"></i>
                                <span class="text-[10px] font-black text-gray-400 group-hover:text-gray-900 uppercase tracking-widest">Applications</span>
                            </a>

                            @* Profile *@
                            <a asp-controller="Account" asp-action="Profile" 
                               class="flex items-center gap-2 px-6 py-2 rounded-full hover:bg-white/50 transition-all group no-underline">
                                <i data-lucide="user-circle" class="w-4 h-4 text-gray-300 group-hover:text-[#F87004]"></i>
                                <span class="text-[10px] font-black text-gray-400 group-hover:text-gray-900 uppercase tracking-widest">Profile</span>
                            </a>
                        </div>

                        @* Vertical Divider *@
                        <div class="h-8 w-[1px] bg-gray-200 mx-2"></div>

                        @* Logout - Styled as text with icon *@
                        <form asp-controller="Account" asp-action="Logout" method="post" class="inline">
                            <button type="submit" class="flex items-center gap-2 text-[10px] font-black text-gray-300 hover:text-red-500 uppercase tracking-widest transition-colors">
                                <i data-lucide="log-out" class="w-4 h-4"></i>
                                Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        @* GUEST: Login and Register buttons *@
                        <a asp-controller="Account" asp-action="Login" 
                           class="text-xs font-bold text-gray-400 hover:text-gray-900 uppercase tracking-widest transition-colors no-underline">
                            Login
                        </a>
                        
                        <a asp-controller="Account" asp-action="Register" class="no-underline">
                            @await Html.PartialAsync("_Button", new ButtonViewModel { 
                                Text = "Register", 
                                Variant = "primary", 
                                ClassName = "mt-0 py-2.5 px-8" 
                            })
                        </a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    @* Footer (Optional placeholder) *@
    <footer class="mt-20 py-10 border-t border-gray-100 text-center">
        <p class="text-xs text-gray-300 font-bold uppercase tracking-widest">© 2024 Paws & Claws For a Cause</p>
    </footer>

    @* Scripts *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <script>
        // Initialize Lucide icons on page load
        lucide.createIcons();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>