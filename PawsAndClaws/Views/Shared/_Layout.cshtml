<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PawsAndClaws</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lilita+One&family=Poppins:wght@300;400;600;700;900&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-[#FFFAF7] font-['Poppins'] text-[#2D2D2D]">
    <header class="bg-white/80 backdrop-blur-md border-b border-gray-100 sticky top-0 z-50">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-20">
                
                @* 1. BRAND LOGO SECTION - Matches image_f5e026.jpg *@
                <div class="flex-shrink-0">
                    <a asp-controller="Home" asp-action="Index" class="flex items-center gap-3 group no-underline">
                        <div class="bg-[#F87004] p-2 rounded-xl shadow-sm group-hover:scale-105 transition-transform">
                            <i data-lucide="paw-print" class="w-6 h-6 text-white"></i>
                        </div>
                        <span class="text-2xl font-black tracking-tighter text-[#2D2D2D] uppercase" style="font-family: 'Lilita One', cursive;">
                            PAWS & CLAWS
                        </span>
                    </a>
                </div>

                @* 2. CONDITIONAL NAVIGATION SECTION *@
                <div class="flex items-center gap-4">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        var controller = ViewContext.RouteData.Values["controller"]?.ToString();
                        var action = ViewContext.RouteData.Values["action"]?.ToString();
                        bool isAdmin = User.IsInRole("Admin");
                        
                        bool isHomeActive = controller == "Home";
                        bool isApplicationsActive = controller == "Adoption";
                        bool isProfileActive = controller == "Account" && action == "Profile";
                        bool isPetActive = controller == "Pet";

                        @* LOGGED IN: Pill-shaped navigation *@
                        <div class="flex items-center bg-[#F8F9FA] border border-gray-100 rounded-full p-1.5 gap-1 shadow-inner">
                            
                            @if (isAdmin)
                            {
                                @* ADMIN VIEW: All Pets *@
                                <a asp-controller="Pet" asp-action="Inventory" 
                                   class="flex items-center gap-2 px-5 py-2 rounded-full transition-all no-underline @(isPetActive ? "bg-white shadow-sm border border-gray-50" : "hover:bg-white/60 group")">
                                    <i data-lucide="paw-print" class="w-4 h-4 @(isPetActive ? "text-[#F87004]" : "text-gray-300 group-hover:text-[#F87004]")"></i>
                                    <span class="text-xs font-bold uppercase tracking-widest @(isPetActive ? "text-[#F87004]" : "text-gray-400 group-hover:text-gray-600")">All Pets</span>
                                </a>

                                @* ADMIN VIEW: Manage Applications *@
                                <a asp-controller="Adoption" asp-action="ManageApplications" 
                                   class="flex items-center gap-2 px-5 py-2 rounded-full transition-all no-underline @(isApplicationsActive ? "bg-white shadow-sm border border-gray-50" : "hover:bg-white/60 group")">
                                    <i data-lucide="clipboard-check" class="w-4 h-4 @(isApplicationsActive ? "text-[#F87004]" : "text-gray-300 group-hover:text-[#F87004]")"></i>
                                    <span class="text-xs font-bold uppercase tracking-widest @(isApplicationsActive ? "text-[#F87004]" : "text-gray-400 group-hover:text-gray-600")">Manage Applications</span>
                                </a>
                            }
                            else
                            {
                                @* USER VIEW: Home *@
                                <a asp-controller="Home" asp-action="Index" 
                                   class="flex items-center gap-2 px-5 py-2 rounded-full transition-all no-underline @(isHomeActive ? "bg-white shadow-sm border border-gray-50" : "hover:bg-white/60 group")">
                                    <i data-lucide="home" class="w-4 h-4 @(isHomeActive ? "text-[#F87004]" : "text-gray-300 group-hover:text-[#F87004]")"></i>
                                    <span class="text-xs font-bold uppercase tracking-widest @(isHomeActive ? "text-[#F87004]" : "text-gray-400 group-hover:text-gray-600")">Home</span>
                                </a>

                                @* USER VIEW: My Applications *@
                                <a asp-controller="Adoption" asp-action="MyApplications" 
                                   class="flex items-center gap-2 px-5 py-2 rounded-full transition-all no-underline @(isApplicationsActive ? "bg-white shadow-sm border border-gray-50" : "hover:bg-white/60 group")">
                                    <i data-lucide="clipboard-list" class="w-4 h-4 @(isApplicationsActive ? "text-[#F87004]" : "text-gray-300 group-hover:text-[#F87004]")"></i>
                                    <span class="text-xs font-bold uppercase tracking-widest @(isApplicationsActive ? "text-[#F87004]" : "text-gray-400 group-hover:text-gray-600")">Applications</span>
                                </a>

                                @* USER VIEW: Profile *@
                                <a asp-controller="Account" asp-action="Profile" 
                                   class="flex items-center gap-2 px-5 py-2 rounded-full transition-all no-underline @(isProfileActive ? "bg-white shadow-sm border border-gray-50" : "hover:bg-white/60 group")">
                                    <i data-lucide="user-circle" class="w-4 h-4 @(isProfileActive ? "text-[#F87004]" : "text-gray-300 group-hover:text-[#F87004]")"></i>
                                    <span class="text-xs font-bold uppercase tracking-widest @(isProfileActive ? "text-[#F87004]" : "text-gray-400 group-hover:text-gray-600")">Profile</span>
                                </a>
                            }
                        </div>

                        @* Vertical Divider *@
                        <div class="h-6 w-[1px] bg-gray-200 mx-2"></div>

                        @* Logout *@
                        <form asp-controller="Account" asp-action="Logout" method="post" class="inline">
                            <button type="submit" class="flex items-center gap-2 px-3 py-2 text-xs font-bold text-gray-300 hover:text-red-500 uppercase tracking-widest transition-colors group">
                                <i data-lucide="log-out" class="w-4 h-4 group-hover:translate-x-0.5 transition-transform"></i>
                                Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        @* GUEST: Matches image_f2adaf.png *@
                        <a asp-controller="Account" asp-action="Login" 
                           class="text-xs font-bold text-gray-400 hover:text-gray-900 uppercase tracking-widest transition-colors no-underline px-4">
                            Login
                        </a>
                        
                        <a asp-controller="Account" asp-action="Register" class="no-underline">
                            <div class="bg-gradient-to-r from-[#F87004] to-[#FFB347] text-white px-8 py-3 rounded-full text-xs font-bold uppercase tracking-widest shadow-lg shadow-orange-100 hover:scale-[1.03] active:scale-[0.98] transition-all">
                                Register
                            </div>
                        </a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    @* Scripts *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <script>
        lucide.createIcons();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>