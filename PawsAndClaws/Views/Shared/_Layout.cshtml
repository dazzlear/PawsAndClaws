<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PawsAndClaws</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lilita+One&family=Poppins:wght@300;400;600;700;900&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-[#F5F5F5] font-['Poppins']">
    <header class="bg-white border-b border-gray-100 sticky top-0 z-50">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-20">
                <div class="flex-shrink-0 flex items-center">
                    <a asp-controller="Home" asp-action="Index" class="flex items-center gap-2 group decoration-none">
                        <div class="bg-[#FF8533] p-2 rounded-lg">
                            <i data-lucide="paw-print" class="w-6 h-6 text-white"></i>
                        </div>
                        <span class="text-2xl font-black tracking-tighter text-gray-900 group-hover:text-[#FF8533] transition-colors" style="font-family: 'Lilita One', cursive;">
                            PAWS & CLAWS
                        </span>
                    </a>
                </div>

                <div class="flex items-center gap-6">
                    <a asp-controller="Account" asp-action="Login" class="text-xs font-bold text-gray-400 hover:text-gray-900 uppercase tracking-widest transition-colors decoration-none">
                        Login
                    </a>
                    
                    <a asp-controller="Account" asp-action="Register" 
                       class="bg-gradient-to-r from-[#F28C28] to-[#FBBF24] text-white px-8 py-2.5 rounded-full text-xs font-bold uppercase tracking-widest shadow-lg shadow-orange-100 hover:scale-[1.02] transition-all decoration-none">
                        Register
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <script>
        lucide.createIcons();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>